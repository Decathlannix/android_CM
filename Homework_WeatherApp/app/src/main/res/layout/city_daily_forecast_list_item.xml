<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#2F2F30"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/cityImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityTemp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center"
                android:paddingEnd="4dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityTempMax"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingStart="4dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textColor="#F40000"
                    android:background="#C8048DFA"/>

                <TextView
                    android:id="@+id/cityTempMin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingStart="4dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textColor="#68DDEC"
                    android:background="#C8048DFA"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C8048DFA"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/feeling" />

            <TextView
                android:id="@+id/cityFeelsLike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="#4E4C4C"
                android:background="#C8048DFA"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cityWeatherDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:background="#C8048DFA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/pressure"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityPressure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/humidity"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityHumidity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/visibility"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityVisibility"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/wind_speed"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityWindSpeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/rain_probability"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityRainProb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                android:scaleType="fitEnd"
                android:src="@drawable/part_of_day"
                android:background="#C8048DFA"/>

            <TextView
                android:id="@+id/cityPartDay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="#C8048DFA"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
